<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:name=".ECommerceApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ECommerceApp">
        
        <!-- Authentication Activities -->
        <activity
            android:name=".ui.auth.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.ECommerceApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".ui.auth.SignUpActivity"
            android:exported="false"
            android:theme="@style/Theme.ECommerceApp" />
        
        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="false"
            android:theme="@style/Theme.ECommerceApp" />
        
        <!-- Product Details Activity -->
        <activity
            android:name=".ui.activities.ProductDetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.ECommerceApp" />
        
        <!-- Checkout Activity -->
        <activity
            android:name=".ui.activities.CheckoutActivity"
            android:exported="false"
            android:theme="@style/Theme.ECommerceApp" />
        
        <!-- Orders Activity -->
        <activity
            android:name=".ui.activities.OrdersActivity"
            android:exported="false"
            android:theme="@style/Theme.ECommerceApp" />
    </application>

</manifest>